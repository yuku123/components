<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zifang.z.config.core.domain.mapper.ZConfigInfoMapper">

    <!-- 基础结果集映射 -->
    <resultMap id="BaseResultMap" type="com.zifang.z.config.core.domain.entity.ZConfigInfo">
                <id column="id" property="id" />
                <result column="data_id" property="dataId" />
                <result column="group" property="group" />
                <result column="content" property="content" />
                <result column="md5" property="md5" />
                <result column="gmt_create" property="gmtCreate" />
                <result column="gmt_modified" property="gmtModified" />
                <result column="creator_staff_no" property="creatorStaffNo" />
                <result column="creator_staff_nick_nm" property="creatorStaffNickNm" />
                <result column="creator_staff_real_nm" property="creatorStaffRealNm" />
                <result column="source_ip" property="sourceIp" />
                <result column="app_name" property="appName" />
                <result column="namespace" property="namespace" />
                <result column="config_desc" property="configDesc" />
                <result column="config_usage" property="configUsage" />
                <result column="config_enable_rule" property="configEnableRule" />
                <result column="config_type" property="configType" />
                <result column="config_schema" property="configSchema" />
    </resultMap>

    <!-- 基础查询字段 -->
    <sql id="Base_Column_List">
            id,
            data_id,
            group,
            content,
            md5,
            gmt_create,
            gmt_modified,
            creator_staff_no,
            creator_staff_nick_nm,
            creator_staff_real_nm,
            source_ip,
            app_name,
            namespace,
            config_desc,
            config_usage,
            config_enable_rule,
            config_type,
            config_schema
    </sql>

    <!-- 新增语句 -->
    <insert id="insert" parameterType="com.zifang.z.config.core.domain.entity.ZConfigInfo">
        INSERT INTO z_config_info (
                data_id,
                group,
                content,
                md5,
                gmt_create,
                gmt_modified,
                creator_staff_no,
                creator_staff_nick_nm,
                creator_staff_real_nm,
                source_ip,
                app_name,
                namespace,
                config_desc,
                config_usage,
                config_enable_rule,
                config_type,
                config_schema
        ) VALUES (
                dataId,
                group,
                content,
                md5,
                gmtCreate,
                gmtModified,
                creatorStaffNo,
                creatorStaffNickNm,
                creatorStaffRealNm,
                sourceIp,
                appName,
                namespace,
                configDesc,
                configUsage,
                configEnableRule,
                configType,
                configSchema
        )
    </insert>

    <!-- 根据ID查询 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM z_config_info
        WHERE
                id = id
    </select>

    <!-- 更新语句 -->
    <update id="updateById" parameterType="com.zifang.z.config.core.domain.entity.ZConfigInfo">
        UPDATE z_config_info
        SET
                data_id = dataId,
                group = group,
                content = content,
                md5 = md5,
                gmt_create = gmtCreate,
                gmt_modified = gmtModified,
                creator_staff_no = creatorStaffNo,
                creator_staff_nick_nm = creatorStaffNickNm,
                creator_staff_real_nm = creatorStaffRealNm,
                source_ip = sourceIp,
                app_name = appName,
                namespace = namespace,
                config_desc = configDesc,
                config_usage = configUsage,
                config_enable_rule = configEnableRule,
                config_type = configType,
                config_schema = configSchema
        WHERE
                id = id
    </update>

    <!-- 删除语句 -->
    <delete id="deleteById">
        DELETE FROM z_config_info
        WHERE
                id = id
    </delete>

</mapper>